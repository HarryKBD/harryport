<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/code"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="TQQQ"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="TextView" />

            <TextView
                android:id="@+id/mdd"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tmdd"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/peak"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/mx_mdd"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_date"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="2022-01-01" />

            <TextView
                android:id="@+id/mdd_date"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="2022-01-01" />

            <TextView
                android:id="@+id/tmdd_date"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="2022-01-01" />

            <TextView
                android:id="@+id/peak_date"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="2022-01-01" />

            <TextView
                android:id="@+id/mx_mdd_date"
                android:layout_width="@dimen/mdd_item_width"
                android:layout_height="wrap_content"
                android:text="2022-01-01" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>